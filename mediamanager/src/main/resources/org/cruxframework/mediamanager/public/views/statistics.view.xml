<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:faces="http://www.cruxframework.org/crux/smart-faces" 
	onActivate="statisticsController.onActivate"
	useController="statisticsController"> 
	
	<h1 class="view-title">Statistics:</h1>
	<faces:sectionPanel id="CDsWrapper" styleName="content styled stats">
		<faces:label id="CDsTitle" text="CDs" styleName="stats-h2"/>
		<!-- CD Stats -->
		<gwt:grid id="CDsStats" styleName="c-grid">
			<gwt:row>
				<gwt:cell>
					<gwt:widget>
						<faces:label id="totalCDs" text="CDs Total"/>
					</gwt:widget>
				</gwt:cell>
				<gwt:cell>
					<gwt:widget>
						<faces:label id="totalCDsLabel" text="0"/>
					</gwt:widget>
				</gwt:cell>
			</gwt:row>
			<gwt:row>
				<gwt:cell>
					<gwt:widget>
						<faces:label id="totalCDBorroweds" text="CDs borrowed"/>
					</gwt:widget>
				</gwt:cell>
				<gwt:cell>
					<gwt:widget>
						<faces:label id="borrowedCDsLabel" text="0"/>
					</gwt:widget>
				</gwt:cell>
			</gwt:row>
			<gwt:row>
				<gwt:cell>
					<gwt:widget>
						<faces:label id="totalCDsMoreThanOneMonth" text="More than one month"/>
					</gwt:widget>
				</gwt:cell>
				<gwt:cell>
					<gwt:widget>
						<faces:label id="forgottenCDsLabel" text="0"/>
					</gwt:widget>
				</gwt:cell>
			</gwt:row>
		</gwt:grid>
		</faces:sectionPanel>

		<faces:sectionPanel id="DVDsWrapper" styleName="content styled stats">
		<faces:label id="DVDsTitle" text="DVDs" styleName="stats-h2"/>
		<!-- DVD Stats -->
		<gwt:grid id="DVDsStats" styleName="c-grid">
			<gwt:row>
				<gwt:cell>
					<gwt:widget>
						<faces:label id="totalDVDs" text="DVDs Total"/>
					</gwt:widget>
				</gwt:cell>
				<gwt:cell>
					<gwt:widget>
						<faces:label id="totalDVDsLabel" text="0"/>
					</gwt:widget>
				</gwt:cell>
			</gwt:row>
			<gwt:row>
				<gwt:cell>
					<gwt:widget>
						<faces:label id="totalDVDsBorroweds" text="DVDs borrowed"/>
					</gwt:widget>
				</gwt:cell>
				<gwt:cell>
					<gwt:widget>
						<faces:label id="borrowedDVDsLabel" text="0"/>
					</gwt:widget>
				</gwt:cell>
			</gwt:row>
			<gwt:row>
				<gwt:cell>
					<gwt:widget>
						<faces:label id="totalDVDsMoreThanOneMonth" text="More than one month"/>
					</gwt:widget>
				</gwt:cell>
				<gwt:cell>
					<gwt:widget>
						<faces:label id="forgottenDVDsLabel" text="0"/>
					</gwt:widget>
				</gwt:cell>
			</gwt:row>
		</gwt:grid>
	</faces:sectionPanel>
</v:view>