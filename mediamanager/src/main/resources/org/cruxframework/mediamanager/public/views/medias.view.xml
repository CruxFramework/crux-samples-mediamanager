<v:view xmlns="http://www.w3.org/1999/xhtml" xmlns:v="http://www.cruxframework.org/view"
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt" 
	xmlns:faces="http://www.cruxframework.org/crux/smart-faces"
	onActivate="mediasController.onActivate" 
	useController="mediasController"
	useDataSource="mediaDTODatasource" 
	title="Hello, Crux!">


	<h1 class="view-title">Search media</h1>
	<!-- Search panel -->
	<gwt:flowPanel id="outerPanel" styleName="content styled">
		<crux:formDisplay id="form">

			<crux:entry label="Type:">
				<gwt:listBox id="typeListBox" styleName="sel-box" />
			</crux:entry>

			<crux:entry label="Name:">
				<gwt:textBox id="nameTextBox" styleName="txt-box" />
			</crux:entry>

			<crux:entry label="Borrowed:">
				<gwt:textBox id="personTextBox" styleName="txt-box" />
			</crux:entry>

			<crux:entry horizontalAlignment="center">
				<faces:navPanel id="searchButtonNav" styleName="crud-btns">
					<faces:button id="pesquisarButton" text="Search"
						onSelect="mediasController.search" styleName="c-btn orange" />
				</faces:navPanel>
			</crux:entry>

		</crux:formDisplay>
	</gwt:flowPanel>

	<!-- Result Panel -->
	<gwt:flowPanel id="resultPanel" styleName="content styled">
		<crux:adaptiveGrid id="tableGrid" width="100%"
			height="100" stretchColumns="true" autoLoadData="false" pageSize="10"
			dataSource="mediaDTODatasource" defaultSortingColumn="name"
			defaultSortingType="ascending">
			<crux:largeColumns>
				<crux:dataColumn key="type" label="Type" />
				<crux:dataColumn key="name" label="Name" />
				<crux:dataColumn key="artist.name" label="Artist" />
				<crux:dataColumn key="person" label="Person" />

				<crux:widgetColumn key="actionColumn" label="Action">
					<gwt:flowPanel id="btnGroup" styleName="action-btns">
						<crux:button id="edit" onSelect="mediasController.prepareForUpdate"
							text="Edit" styleName="c-btn orange" />
						<crux:button id="delete" onSelect="mediasController.delete"
							text="Delete" styleName="c-btn orange" />
						<crux:button id="lend" onSelect="mediasController.lend"
							text="Lend" styleName="c-btn orange" /> 
					</gwt:flowPanel>
				</crux:widgetColumn>
			</crux:largeColumns>
			<crux:smallColumns> 
				<crux:dataColumn key="name" label="Name" />
				<crux:actionColumn key="actionEdit">
					<crux:button id="editSmall" onSelect="mediasController.prepareForUpdate" text="Edit" styleName="c-btn orange device-small" />
				</crux:actionColumn>
				<crux:actionColumn key="actionDelete">
					<crux:button id="deleteSmall" onSelect="mediasController.delete" text="Delete" styleName="c-btn orange device-small"/>
				</crux:actionColumn>
				<crux:actionColumn key="actionLend">
					<crux:button id="lendSmall" onSelect="mediasController.lend" text="Lend" styleName="c-btn orange device-small" />
				</crux:actionColumn>
			</crux:smallColumns>
		</crux:adaptiveGrid>
	</gwt:flowPanel>


</v:view>