<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:faces="http://www.cruxframework.org/crux/smart-faces" 
	useController="loginController"
	title="Login"
	onActivate="loginController.animateLogin"> 
	
	<gwt:flowPanel id="outerPanel">
		<gwt:flowPanel id="leftBlock" styleName="c-leftWrapper">
			<gwt:label id="logo" styleName="c-logo"></gwt:label>
			<gwt:HTMLPanel id="introductionText" styleName="c-introductionText">
                <p> The Media Manager is a web application developed with 
                <a href="http://www.cruxframework.org/" title="Crux" target="_blank" class="defaultLink">Crux Framework</a>.
                The idea of this application is to use Crux to build a real project that can be used as example for new developers.
                </p>
                <!-- 
                <a href="http://www.cruxframework.org/" target="_blank"> <img
                    src="logo-crux.svg" alt="Crux Framework"
                    style="margin-right: 10px; width:50px;" />
                </a> 
                 -->           
                <p> Visit the site and know more about the 
                <a href="http://mediamanager.cruxframework.org/" title="Media Manager" target="_blank" class="defaultLink">Media Manager </a>.
                </p>                
				<p>Developed by <a href="http://www.triggolabs.com/" title="Triggo" target="_blank" class="defaultLink">Triggo Labs</a>, 
				the maintainer of Crux Framework. </p>
				<gwt:label id="footerName" styleName="c-footerCopyright" text="Â© Media Manager, all rights reserved."/>
			</gwt:HTMLPanel>
		</gwt:flowPanel>
		<gwt:flowPanel id="rightBlock" styleName="c-rightWrapper">
			<gwt:flowPanel id="formWrapper" styleName="c-formWrapper">
				<crux:formDisplay id="form" >
				
					<crux:entry label="Login: ">
						<gwt:textBox id="loginTextBox" styleName="login-textbox" />
					</crux:entry>
					
					<crux:entry label="Password: ">
						<gwt:passwordTextBox id="passwordTextBox" />
					</crux:entry>
					
					<crux:entry horizontalAlignment="right">
						<faces:button id="loginButton" text="Access my media" onSelect="loginController.login" styleName="c-loginButton" />
					</crux:entry>
					
					<crux:entry>
						<gwt:label text="or" id="orLabel" styleName="c-orLabel" />
					</crux:entry>
					
					<crux:entry horizontalAlignment="right">
						<faces:button id="signUpButton" text="Create an account" onSelect="loginController.createNewAccount" styleName="c-signUpButton" />
					</crux:entry>
				
				</crux:formDisplay>
			</gwt:flowPanel>
		</gwt:flowPanel>
	</gwt:flowPanel>
	
</v:view>